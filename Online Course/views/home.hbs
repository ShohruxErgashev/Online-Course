{{#if products.length}}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each products}}
        <div class="col">
            <div class="card shadow-sm">
            <img src="{{image}}" alt="">
            <div class="card-body">
            <p class="card-text fw-bold">{{title}}</p>
            <div class="d-flex justify-content-between align-items-center">
                <p>{{formatDate createdAt}}</p>
            <small class="text-body-secondary fs-5">{{price}}$</small>
            </div>

            <div class="card-footer">
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic mixed styles example">
                    <a href="/product/{{_id}}" type="button" class="btn btn-outline-success">Detail</a>
                    {{#if @root.token}}
                    {{#ifequal user @root.userId}}
                    <a href="/edit-product/{{_id}}" type="button" class="btn btn-outline-warning">Edit</a>
                    <button type="button" class="btn btn-outline-danger">Delete</button>
                    {{/ifequal}}
                    {{/if}}
    
                </div>
            </div>
            </div>
            </div>
        </div>
        {{/each}}
    </div>
{{else}}
    <p>No product</p>
{{/if}}
